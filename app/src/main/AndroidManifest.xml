<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asusoft.calendar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.CalendarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.setting.activity.ActivitySetting"></activity>
        <activity android:name=".activity.addEvent.activity.ActivityAddPerson" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admod_app_id" />

        <activity
            android:name=".activity.addEvent.activity.ActivityAddEvent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.calendar.activity.ActivityCalendar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>